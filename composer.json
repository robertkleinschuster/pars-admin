{
    "name": "pars/pars-admin",
    "description": "",
    "license": "BSD-3-Clause",
    "keywords": [
        "pars"
    ],
    "support": {
        "docs": "https://docs.parsphp.org/pars-admin/",
        "issues": "https://github.com/pars/pars-admin/issues",
        "source": "https://github.com/pars/pars-admin",
        "rss": "https://github.com/pars/pars-admin/releases.atom",
        "forum": "https://discourse.parsphp.org/"
    },
    "require": {
        "php": "^7.4",
        "pars/pars-core": "dev-master",
        "pars/pars-mvc": "dev-master",
        "pars/pars-components": "dev-master",
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^8.1",
        "squizlabs/php_codesniffer": "^3.5",
        "laminas/laminas-component-installer": "^2.1.2",
        "composer/package-versions-deprecated": "^1.10.99"
    },
    "autoload": {
        "psr-4": {
            "Pars\\Admin\\": "src//"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ParsTest\\Admin\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "laminas": {
            "module": "Pars\\Admin"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "mezzio": "mezzio --ansi",
        "check": [
            "@cs-check",
            "@test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
