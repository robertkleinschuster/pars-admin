{
    "name": "pars/pars-admin",
    "description": "",
    "license": "BSD-3-Clause",
    "keywords": [
        "pars"
    ],
    "support": {
        "docs": "https://docs.parsphp.org/pars-admin/",
        "issues": "https://github.com/pars/pars-admin/issues",
        "source": "https://github.com/pars/pars-admin",
        "rss": "https://github.com/pars/pars-admin/releases.atom",
        "forum": "https://discourse.parsphp.org/"
    },
    "require": {
        "php": "^7.4",
        "pars/pars-core": "dev-master",
        "pars/pars-cli": "dev-master",
        "pars/pars-mvc": "dev-master",
        "pars/pars-components": "dev-master",
        "pars/pars-helpers": "dev-master",
        "pars/pars-models": "dev-master",
        "pars/pars-import": "dev-master",
        "pars/pars-beans": "dev-master",
        "pars/pars-patterns": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Pars\\Admin\\": "src//"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ParsTest\\Admin\\": "test/"
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "vendor/pars/pars-core/composer.json"
            ],
            "require": [],
            "recurse": true,
            "replace": false,
            "ignore-duplicates": false,
            "merge-dev": true,
            "merge-extra": true,
            "merge-extra-deep": false,
            "merge-scripts": true
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "classmap-authoritative": true
    },
    "scripts": {
        "serve": [
            "php -q -S admin.localhost:8080 -t public/ & yarn encore dev --watch & log stream --style syslog --level debug --predicate 'process == \"php\"'"
        ],
        "post-install-cmd": [
            "yarn install",
            "yarn encore production"
        ],
        "development": "php bin/development-mode.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
