{
  "name": "pars/pars-admin",
  "description": "",
  "license": "BSD-3-Clause",
  "keywords": [
    "pars"
  ],
  "support": {
    "docs": "https://docs.parsphp.org/pars-admin/",
    "issues": "https://github.com/pars/pars-admin/issues",
    "source": "https://github.com/pars/pars-admin",
    "rss": "https://github.com/pars/pars-admin/releases.atom",
    "forum": "https://discourse.parsphp.org/"
  },
  "require": {
    "php": "^7.4",
    "pars/pars-core": "^1.0.x-dev",
    "pars/pars-mvc": "^1.0.x-dev",
    "pars/pars-components": "^1.0.x-dev",
    "pars/pars-helpers": "^1.0.x-dev",
    "pars/pars-models": "^1.0.x-dev",
    "pars/pars-import": "^1.0.x-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3.7",
    "phpspec/prophecy": "^1.10.3",
    "phpspec/prophecy-phpunit": "^2.0",
    "squizlabs/php_codesniffer": "^3.5",
    "composer/package-versions-deprecated": "^1.10.99",
    "composer/composer": "2.0.8",
    "laminas/laminas-development-mode": "^3.2",
    "roave/security-advisories": "dev-master",
    "filp/whoops": "^2.7.1"
  },
  "autoload": {
    "psr-4": {
      "Pars\\Admin\\": "src//"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ParsTest\\Admin\\": "test/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    },
    "laminas": {
      "module": "Pars\\Admin"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "classmap-authoritative": true
  },
  "scripts": {
    "pre-update-cmd": "git pull",
    "post-update-cmd": [
      "@clear-config-cache",
      "php bin/dbschema.php",
      "php bin/dbdata.php"
    ],
    "post-install-cmd": [
      "@clear-config-cache",
      "php bin/dbschema.php",
      "php bin/dbdata.php"
    ],
    "serve": "php -S 0.0.0.0:8080 -t public/",
    "post-create-project-cmd": [
      "@development-enable"
    ],
    "development-disable": "laminas-development-mode disable",
    "development-enable": "laminas-development-mode enable",
    "development-status": "laminas-development-mode status",
    "mezzio": "mezzio --ansi",
    "check": [
      "@cs-check",
      "@test"
    ],
    "clear-config-cache": "php bin/clear-config-cache.php",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}
